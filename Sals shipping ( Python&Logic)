def premium_gr_cost(num):
  if (num >= 0):
    return "125"
  
def drone_weight_cost(weight2):
    if weight2 > 10.0:
      return (weight2 * 14.25)
    elif (6.0 < weight2 <= 10.0):
      return (weight2 * 12.00)
    elif (2.0 < weight2 <= 6.0):
      return (weight2 * 9.00)
    else:
      return(weight2 * 4.50)

print(gr_weight_cost(4.8))
print(drone_weight_cost(4.8))
print(premium_gr_cost(4.8))

